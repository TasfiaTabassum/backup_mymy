<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_setting"
    android:background="@drawable/bg"
    android:gravity="center"
    >


    <Button
        android:id="@+id/setprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:text="Set account name and password"
        android:backgroundTint="@color/bright_purple_pink"
        />

    <Button
        android:id="@+id/setpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:text="Set pin"
        android:layout_below="@+id/setnotifsetting"
        android:backgroundTint="@color/bright_purple_pink"
        />

    <Button
        android:id="@+id/setnotifsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:text="notification settings"
        android:layout_below="@+id/setprofile"
        android:backgroundTint="@color/bright_purple_pink"
        />

  </RelativeLayout>