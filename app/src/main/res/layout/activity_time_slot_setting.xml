<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timeSlotSettingActivity"
    android:gravity="center"
    android:background="@drawable/bg"
    >


    <Button
        android:id="@+id/settimeslot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:text="Set time slot"
        android:backgroundTint="@color/bright_purple_pink"
        />

    <Button
        android:id="@+id/setslotnotifsound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/settimeslot"
        android:text="Set notification sound"
        android:backgroundTint="@color/bright_purple_pink"
        />

    <Button
        android:id="@+id/showtimeslot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/setslotnotifsound"

        android:text="Show all the time slots"
        android:backgroundTint="@color/bright_purple_pink"
        />



</RelativeLayout>